<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h1>Formulir Update Data</h1>

      <% if (typeof errors != 'undefined') { %>
      <div
        class="alert alert-danger shadow p-3 mb-5 bg-body rounded"
        role="alert"
      >
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
        <% } %>

        <form method="post" action="/contact/update">
          <div class="mb-3">
            <label for="nama" class="form-label">Nama</label>
            <input
              type="text"
              class="form-control"
              id="nama"
              name="nama"
              required
              value="<%=  contact.nama ? contact.nama : '' %>"
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              value="<%= contact.email ? contact.email : '' %>"
            />
          </div>
          <div class="mb-3">
            <label for="nomorhp" class="form-label">Nomor Handphone</label>
            <input
              type="text"
              class="form-control"
              id="nomorhp"
              name="nomorhp"
              required
              value="<%=  contact.nomorhp ? contact.nomorhp : '' %>"
            />
          </div>

          <button type="submit" class="btn btn-success btn-gradient shadow p-2">
            Update data
          </button>

          <input
            type="hidden"
            name="namaLama"
            value="<%=  contact.namaLama ? contact.namaLama : '' || contact.nama ? contact.nama: '' %>"
          />
        </form>
        <br />
        <a href="/contact" class="card-link text-success"
          >Kembali ke halaman contact</a
        >
      </div>
    </div>
  </div>
</div>
